@model List<client.DTOs.PersonDTO>

<h2>Persons</h2>

<form method="get" asp-action="Index">
    <div class="form-group">
        <input type="text" name="searchTerm" placeholder="Search by first name" class="form-control" value="@ViewData["searchTerm"]" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Clear</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>
                    <a href="@Url.Action("Details", new { id = person.Id })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = person.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = person.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
