@model scbH60Services.Models.User

@{
    ViewBag.Title = "Edit User";
}

<h2 class="text-3xl font-bold mb-6">Edit User</h2>

<form asp-action="EditUser" method="post" class="space-y-6 mt-4">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="FirstName" class="block text-gray-700 font-medium mb-2">First Name</label>
        <input asp-for="FirstName" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="FirstName" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="LastName" class="block text-gray-700 font-medium mb-2">Last Name</label>
        <input asp-for="LastName" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="LastName" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Email</label>
        <input asp-for="Email" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="Email" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber" class="block text-gray-700 font-medium mb-2">Phone Number</label>
        <input asp-for="PhoneNumber" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="PhoneNumber" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Province" class="block text-gray-700 font-medium mb-2">Province</label>
        <input asp-for="Province" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="Province" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="CreditCard" class="block text-gray-700 font-medium mb-2">Credit Card</label>
        <input asp-for="CreditCard" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="CreditCard" class="text-red-600"></span>
    </div>

    <div class="mt-6 flex space-x-4">
        <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition">Save Changes</button>
        <a asp-action="UserList" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 transition">Cancel</a>
    </div>
</form>
