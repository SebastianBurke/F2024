@model scbH60Services.Models.User

@{
    ViewBag.Title = "User Details";
}

<h2 class="text-3xl font-bold mb-6">User Details</h2>

<div class="space-y-4 mt-4">
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    <p><strong>Province:</strong> @Model.Province</p>
    <p><strong>Credit Card:</strong> @Model.CreditCard</p>

    <h3 class="text-2xl font-semibold">Roles</h3>
    <ul class="list-disc pl-6">
        @foreach (var role in ViewBag.UserRoles)
        {
            <li>@role</li>
        }
    </ul>
</div>

<div class="mt-4">
    <a asp-action="UserList" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition">Back to User List</a>
</div>
