@model scbH60Services.Models.Product

<form asp-action="EditPrice" method="post" class="space-y-4 max-w-sm mx-auto">
    <div class="form-group">
        <label asp-for="BuyPrice" class="block text-sm font-medium text-gray-700">Buy Price:</label>
        <input type="number" step="0.01" asp-for="BuyPrice" class="border border-gray-300 rounded-lg px-3 py-1.5 w-full focus:ring-2 focus:ring-blue-300 text-sm" />
        <span asp-validation-for="BuyPrice" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="SellPrice" class="block text-sm font-medium text-gray-700 mt-2">Sell Price:</label>
        <input type="number" step="0.01" asp-for="SellPrice" class="border border-gray-300 rounded-lg px-3 py-1.5 w-full focus:ring-2 focus:ring-blue-300 text-sm" />
        <span asp-validation-for="SellPrice" class="text-red-500 text-sm"></span>
    </div>

    <input type="hidden" asp-for="ProductId" />

    <button type="submit" class="bg-blue-500 text-white px-3 py-1.5 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300 text-sm">
        Update Price
    </button>
</form>
