@model scbH60Services.Models.Product

<h2 class="text-3xl font-bold mb-6">Delete Product</h2>

<form asp-action="Delete" method="post" class="space-y-6">
    <div class="bg-gray-100 border border-gray-300 rounded-lg p-6">
        <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="w-36 h-36 object-cover rounded-lg" />
                }
                else
                {
                    <img src="/images/default-image.png" alt="Default Image" class="w-32 h-32 object-cover rounded-lg" />
                }
            </div>

            <div class="flex-1">
                <h3 class="text-lg font-semibold mb-4">Are you sure you want to delete this product?</h3>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Manufacturer:</strong> @Model.Manufacturer</p>
                <p><strong>Category:</strong> @Model.ProdCat.ProdCat</p>
                <p><strong>Stock:</strong> @Model.Stock</p>
                <p><strong>Price:</strong> @Model.SellPrice?.ToString("C")</p>
            </div>
        </div>

        <input type="hidden" name="productId" value="@Model.ProductId" />

        <div class="flex gap-4">
            <button type="submit" class="bg-red-500 text-white px-6 py-3 rounded-lg hover:bg-red-600 transition">Delete</button>
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 transition">Cancel</a>
        </div>
    </div>
</form>
