@model scbH60Services.Models.GlobalSettings

@{
    var message = TempData["Message"] as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="bg-blue-100 text-blue-800 border border-blue-200 rounded-lg p-4 mb-6 max-w-md mx-auto">
        @message
    </div>
}

<form asp-action="Update" method="post" class="bg-white p-6 border rounded-lg shadow-md max-w-xs mx-auto">
    <div class="mb-4">
        <label asp-for="MinStockLimit" class="block text-xs font-medium text-gray-700 mb-1">Min Stock Limit</label>
        <input asp-for="MinStockLimit" class="block w-full p-1 border border-gray-300 rounded-md shadow-sm text-xs focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="MinStockLimit" class="text-red-500 text-xs"></span>
    </div>

    <div class="mb-4">
        <label asp-for="MaxStockLimit" class="block text-xs font-medium text-gray-700 mb-1">Max Stock Limit</label>
        <input asp-for="MaxStockLimit" class="block w-full p-1 border border-gray-300 rounded-md shadow-sm text-xs focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="MaxStockLimit" class="text-red-500 text-xs"></span>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-600 transition duration-200 text-xs">
        Save
    </button>
</form>
