@model scbH60Services.Models.ProductCategory

<h3 class="text-2xl font-bold mb-4">Confirm Deletion</h3>
<hr class="my-4 border-gray-300" />

<div class="bg-white p-6 border rounded-lg shadow-sm">
    <h4 class="text-xl font-semibold mb-2">
        Category Name: <span class="font-normal">@Html.DisplayFor(model => model.ProdCat)</span>
    </h4>
    <h4 class="text-lg font-semibold mb-2">Products to be Deleted:</h4>

    @if (ViewBag.ProductsToDelete != null && ViewBag.ProductsToDelete.Count > 0)
    {
        <ul class="list-disc pl-5 space-y-1 text-gray-700">
            @foreach (var product in ViewBag.ProductsToDelete)
            {
                <li>@product.Description (@product.Manufacturer)</li>
            }
        </ul>
    }
    else
    {
        <p class="text-gray-500">No products found in this category.</p>
    }
</div>

<form asp-action="Delete" method="post" class="mt-6 flex space-x-4">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-200">
        Delete
    </button>
    <a asp-action="Index" class="bg-gray-300 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-400 transition duration-200">
        Cancel
    </a>
</form>
