@model IEnumerable<scbH60Services.Models.ProductCategory>

<h2 class="text-2xl font-bold mb-6">Product Categories</h2>

@if (Model != null && Model.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var category in Model.OrderBy(c => c.ProdCat))
        {
            <a asp-action="CategoryProducts" asp-route-id="@category.CategoryId" class="block border border-gray-300 p-4 rounded-lg shadow-md bg-white hover:bg-gray-100 transition">
                <div class="aspect-w-4 aspect-h-3 mb-4 w-full">
                    <img src="@category.ImageUrl" alt="@category.ProdCat" class="object-cover w-full h-full rounded-md" />
                </div>
                <h3 class="text-lg font-semibold mb-2 text-center text-blue-600 hover:text-blue-800">
                    @category.ProdCat
                </h3>
            </a>
        }
    </div>
}
else
{
    <p class="text-gray-500">No categories available.</p>
}
