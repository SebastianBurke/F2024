@model scbH60Store.Models.ProductCategory

<h2 class="text-3xl font-bold mb-6">Create Product Category</h2>

<form asp-action="Create" enctype="multipart/form-data" class="space-y-6">
    <div class="flex flex-col md:flex-row md:space-x-4 space-y-6 md:space-y-0">
        <div class="flex-1">
            <label asp-for="ProdCat" class="block text-lg font-medium text-gray-700 mb-1">Category Name</label>
            <input asp-for="ProdCat" class="form-control border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 w-full" />
            <span asp-validation-for="ProdCat" class="text-red-500 mt-1 text-sm"></span>
        </div>

        <div class="flex-1">
            <label for="ImageFile" class="block text-lg font-medium text-gray-700 mb-1">Category Image</label>
            <input type="file" name="ImageFile" class="block w-full text-sm text-gray-500 file:mr-4 file:py-1 file:px-2 file:border file:border-gray-300 file:rounded-lg file:text-sm file:font-medium file:bg-gray-50 file:text-gray-700 hover:file:bg-gray-100" />
        </div>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-200">
        Create
    </button>
</form>
