@model scbH60Store.Models.LoginViewModel

<h2 class="text-3xl font-bold mb-6">Login</h2>

<form asp-action="Login" asp-controller="CustomerAccount" method="post" class="space-y-6">
    <!-- Email -->
    <div>
        <label asp-for="Email" class="block text-gray-700 font-medium mb-2"></label>
        <input asp-for="Email" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="Email" class="text-red-600"></span>
    </div>

    <!-- Password -->
    <div>
        <label asp-for="Password" class="block text-gray-700 font-medium mb-2"></label>
        <input asp-for="Password" type="password" class="border border-gray-300 rounded-lg px-4 py-3 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="Password" class="text-red-600"></span>
    </div>

    <!-- Remember Me -->
    <div class="flex items-center">
        <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
        <label asp-for="RememberMe" class="ml-2 block text-gray-700 font-medium">Remember Me</label>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition">Login</button>
</form>
