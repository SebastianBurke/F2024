@model IEnumerable<scbH60Store.Models.Product>

<h2 class="text-2xl font-bold mb-6 flex justify-between items-center">
    Products in @ViewBag.CategoryName
</h2>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-100">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Image
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.SellPrice)
            </th>
            <th class="px-6 py-3"></th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        @foreach (var product in Model)
        {
            <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <img src="@product.ImageUrl" alt="@product.Description" class="w-24 h-24 object-cover rounded-lg" />
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    @product.Description
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    @product.SellPrice
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a asp-controller="CustomerProduct" asp-action="Details" asp-route-ProductId="@product.ProductId" class="text-blue-600 hover:text-blue-800">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
