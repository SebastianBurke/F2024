@model scbH60Store.Models.ProductCategory

<h2>Product Category Details</h2>

<div>
    <h4>@Model.ProdCat</h4>
    <img src="@Model.ImageUrl" alt="@Model.ProdCat" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdCat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdCat)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-categoryId="@Model.CategoryId" class="btn btn-primary">Edit Category</a>
    <a asp-action="Delete" asp-route-categoryId="@Model.CategoryId" class="btn btn-warning">Delete</a>
</div>
