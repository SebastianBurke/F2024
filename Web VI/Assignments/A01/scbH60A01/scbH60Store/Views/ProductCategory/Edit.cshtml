@model scbH60Store.Models.ProductCategory

<h2>Edit Product Category</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ProdCat" class="control-label"></label>
        <input asp-for="ProdCat" class="form-control" />
        <span asp-validation-for="ProdCat" class="text-danger"></span>
    </div>

    <!-- Display the current category image -->
    <div class="form-group">
        <label>Current Image</label>
        <div>
            <img src="@Model.ImageUrl" alt="Category Image" style="max-width: 150px; max-height: 150px;" />
        </div>
    </div>

    <input type="hidden" asp-for="ImageUrl" />

    <input type="file" name="ImageFile" class="form-control-file" />
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
