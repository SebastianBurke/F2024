@model scbH60Store.Models.Product

<form asp-action="EditPrice" method="post" class="space-y-4">
    <div class="form-group">
        <label asp-for="BuyPrice" class="block text-sm font-medium text-gray-700">Buy Price:</label>
        <input type="number" step="0.01" asp-for="BuyPrice" class="border border-gray-300 rounded-lg px-4 py-2 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="BuyPrice" class="text-red-500 text-sm"></span>
    </div>
    <div class="form-group">
        <label asp-for="SellPrice" class="block text-sm font-medium text-gray-700">Sell Price:</label>
        <input type="number" step="0.01" asp-for="SellPrice" class="border border-gray-300 rounded-lg px-4 py-2 w-full focus:ring-2 focus:ring-blue-300" />
        <span asp-validation-for="SellPrice" class="text-red-500 text-sm"></span>
    </div>
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">Update Price</button>
</form>
