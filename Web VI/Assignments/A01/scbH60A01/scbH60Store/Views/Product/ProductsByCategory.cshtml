@model IEnumerable<scbH60Store.Models.ProductCategory>

<h2>Products by Category</h2>

@foreach (var category in Model)
{
    <h3>@category.ProdCat</h3> <!-- Category Name -->

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Stock</th>
                <th>Sell Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in category.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Stock</td>
                    <td>@product.SellPrice</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.ProductId">Details</a> |
                        <a asp-action="Edit" asp-route-id="@product.ProductId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
