@model scbH60Store.Models.Product

<form asp-action="UpdatePrice" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="BuyPrice">Buy Price:</label>
        <input type="number" step="0.01" asp-for="BuyPrice" class="form-control" />
        <span asp-validation-for="BuyPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SellPrice">Sell Price:</label>
        <input type="number" step="0.01" asp-for="SellPrice" class="form-control" />
        <span asp-validation-for="SellPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Price</button>
</form>
