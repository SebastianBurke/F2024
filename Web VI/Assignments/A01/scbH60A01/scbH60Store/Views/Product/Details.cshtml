@model scbH60Store.Models.Product

<h2>Product Details</h2>

<div>
    <h3>@Model.Description</h3>
    <p><strong>Manufacturer:</strong> @Model.Manufacturer</p>
    <p><strong>Category:</strong> @Model.ProdCat.ProdCat</p>
    <p><strong>Stock:</strong> @Model.Stock</p>
    <p><strong>Price:</strong> @Model.SellPrice?.ToString("C")</p>
    <p><strong>Employee Notes:</strong> @Model.EmployeeNotes</p>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-productId="@Model.ProductId" class="btn btn-primary">Edit Product</a>
    <a asp-action="EditStock" asp-route-productId="@Model.ProductId" class="btn btn-info">Edit Stock</a>
    <a asp-action="EditPrice" asp-route-productId="@Model.ProductId" class="btn btn-info">Edit Price</a>
    <a asp-action="Delete" asp-route-productId="@Model.ProductId" class="btn btn-warning">Delete</a>
</div>
