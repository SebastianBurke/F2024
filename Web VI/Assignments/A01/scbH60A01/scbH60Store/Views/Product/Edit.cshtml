@model scbH60Store.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger">
            @ViewData["ErrorMessage"]
        </div>
    }
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BuyPrice"></label>
        <input asp-for="BuyPrice" class="form-control" />
        <span asp-validation-for="BuyPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SellPrice"></label>
        <input asp-for="SellPrice" class="form-control" />
        <span asp-validation-for="SellPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProdCatId">Category</label>
        <select asp-for="ProdCatId" class="form-control" asp-items="ViewBag.CategoryList"></select>
        <span asp-validation-for="ProdCatId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeNotes"></label>
        <input asp-for="EmployeeNotes" class="form-control" />
        <span asp-validation-for="EmployeeNotes" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div>
            <label>Current Image</label>
            <img src="@Model.ImageUrl" alt="Product Image" width="150" />
        </div>
    }
    else
    {
        <div>
            <label>Default Image</label>
            <img src="/images/default-image.png" alt="Default Image" width="150" />
        </div>
    }

    <!-- Hidden field to store the existing ImageUrl -->
    <input type="hidden" asp-for="ImageUrl" />

    <input type="file" name="ImageFile" />
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
