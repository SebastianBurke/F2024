<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - scbH60Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scbH60Store.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100">
    <header class="bg-white border-b border-gray-200 shadow-sm">
        <nav class="container mx-auto flex justify-between items-center py-4">
            <a class="text-lg font-bold text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">scbH60Store</a>
            <div class="hidden md:flex space-x-4">
                <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="Product" asp-action="Index">Comic Books</a>
                <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="ProductCategory" asp-action="Index">Categories</a>
                <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="GlobalSettings" asp-action="Index">Settings</a>
            </div>
            <button class="md:hidden text-gray-700 focus:outline-none" id="navbar-toggle">
                <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
                <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
                <span class="block w-6 h-0.5 bg-gray-700"></span>
            </button>
        </nav>
        <div id="navbar-menu" class="hidden md:hidden bg-white border-t border-gray-200">
            <div class="flex flex-col items-center py-2">
                <a class="text-gray-700 hover:text-blue-500 py-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-gray-700 hover:text-blue-500 py-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="text-gray-700 hover:text-blue-500 py-2" asp-area="" asp-controller="Product" asp-action="Index">Comic Books</a>
                <a class="text-gray-700 hover:text-blue-500 py-2" asp-area="" asp-controller="ProductCategory" asp-action="Index">Categories</a>
                <a class="text-gray-700 hover:text-blue-500 py-2" asp-area="" asp-controller="GlobalSettings" asp-action="Index">Settings</a>
            </div>
        </div>
    </header>
    <div class="container mx-auto px-4 py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-t border-gray-200 shadow-md py-4">
        <div class="container mx-auto px-4 text-center text-gray-600">
            &copy; 2024 - scbH60Store - <a href="@Url.Action("Privacy", "Home")" class="text-blue-500 hover:text-blue-700">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Toggle mobile navbar
        document.getElementById('navbar-toggle').addEventListener('click', function () {
            const menu = document.getElementById('navbar-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
